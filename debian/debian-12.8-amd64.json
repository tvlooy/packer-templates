{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Debian_64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/12.8.0/amd64/iso-cd/debian-12.8.0-amd64-netinst.iso",
      "output_directory": "output-debian-12.8-amd64-{{build_type}}",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "none"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--spec-ctrl",
          "off"
        ]
      ],
      "vm_name": "packer-debian-12.8-amd64"
    }
  ],
  "post-processors": [
    {
      "compression_level": "{{user `compression_level`}}",
      "output": "debian-12.8-amd64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/sshd.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "50000",
    "headless": "false",
    "iso_checksum": "04396d12b0f377958a070c38a923c227832fa3b3e18ddc013936ecf492e9fbb3",
    "iso_checksum_type": "sha256",
    "memory": "2048",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "ssh_timeout": "60m"
  }
}

