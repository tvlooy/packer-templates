{
  "builders": [
    {
      "boot_command": [
        "S<enter><wait>",
        "ifconfig em0 inet autoconf<enter><wait>",
        "ftp -o install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/install.conf<enter><wait>",
        "sed -i 's/SERVER_PORT/{{.HTTPIP}}:{{.HTTPPort}}/' install.conf<enter><wait>",
        "ftp -o install.sh http://{{.HTTPIP}}:{{.HTTPPort}}/install.sh<enter><wait>",
        "ftp -o install-chroot.sh http://{{.HTTPIP}}:{{.HTTPPort}}/install-chroot.sh<enter><wait>",
        "sh install.sh < install-chroot.sh \u0026\u0026 reboot<enter>"
      ],
      "boot_wait": "20s",
      "disk_size": "40000",
      "guest_additions_mode": "disable",
      "guest_os_type": "OpenBSD_64",
      "headless": "false",
      "http_directory": "http",
      "iso_checksum": "sha256:041f42e2692e609bfeabda71400100649af8f0aace12a5097794c3a868ff77ec",
      "iso_url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/7.2/amd64/cd72.iso",
      "output_directory": "output-openbsd-7.2-amd64-{{build_type}}",
      "shutdown_command": "doas shutdown -h -p now",
      "ssh_password": "vagrant",
      "ssh_timeout": "60m",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "vm_name": "packer-openbsd-7.2-amd64"
    }
  ],
  "post-processors": [
    {
      "compression_level": "6",
      "output": "openbsd-7.2-amd64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/init.sh",
        "scripts/vagrant.sh",
        "scripts/syspatch.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ]
}

